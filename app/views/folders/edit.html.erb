<ol class="breadcrumb">
  <% @folder.ancestors.reverse.each do |f| %>
  <li><%= link_to fa_icon( "folder", text: f.title), f %></li>
  <% end %>
  <li class="active"><%= fa_icon "folder-open" %> <%= @folder.title %></li>
</ol>

<%= render 'form' %>

<h3>Folders</h3>
<ul class="nav nav-stacked">
<%= render @folder.subfolders %>
</ul>
<h3>Documents</h3>
<ul class="nav nav-stacked">
<%= render @folder.docs %>
</ul>